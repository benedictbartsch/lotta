<% helper ||= false %>
<% tracking ||= false %>
<%= form_with(model: @user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.text_field :email, autofocus: true, placeholder: t('users.shared.email_placeholder'), class: 'input' %>
    <% if helper %>
      <p class="help">This is where we'll send you the magic link to log back in.</p>
    <% end %>
  </div>
  <div class="control"><%= f.submit 'Get started for free', class: 'button is-primary is-fullwidth', onclick: "_paq.push(['trackEvent', 'User', 'sign-up']);" if tracking %></div>
<% end %>
